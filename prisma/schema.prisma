generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id String @id

  object OBJECT_TYPES

  actor_id   String
  actor_name String

  group String

  target_id   String
  target_name String

  location    String
  occurred_at DateTime
  metadata    Json

  action_id String
  action    EventAction @relation(fields: [action_id], references: [id])
}

model EventAction {
  id     String  @id
  object String
  name   String
  events Event[]
}

enum OBJECT_TYPES {
  event
}
